# EditorConfig helps maintain consistent coding styles between different editors/IDEs
# See https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_size = 2

[*.{dart,gradle,kts}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
